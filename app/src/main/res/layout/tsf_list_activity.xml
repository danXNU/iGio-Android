<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tableView"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/yearSpinner"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/monthSpinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/yearSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@+id/monthSpinner"/>
</android.support.constraint.ConstraintLayout>