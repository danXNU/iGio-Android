<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/ts_m_cell">

    <TextView
            android:text="14:00"
            android:layout_width="60dp"
            android:layout_height="wrap_content" android:id="@+id/time14Label"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/dayLabel" app:layout_constraintStart_toEndOf="@+id/ts_m_cell"
            app:layout_constraintEnd_toStartOf="@+id/ts_m_cell" app:layout_constraintHorizontal_bias="0.5"
            android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/emoji14Label"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/time14Label" app:layout_constraintStart_toStartOf="@+id/time14Label"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="373dp"
            android:layout_height="22dp"
            android:id="@+id/dayLabel" android:textAlignment="center"
            android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="8:00"
            android:layout_width="60dp"
            android:layout_height="19dp" android:id="@+id/time8Label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/dayLabel"
            android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/emoji20Label"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/time20Label" app:layout_constraintStart_toStartOf="@+id/time20Label"
    />
    <TextView
            android:text="20:00"
            android:layout_width="60dp"
            android:layout_height="wrap_content" android:id="@+id/time20Label"
            android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/dayLabel" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/emoji8Label"
            android:textAlignment="center" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/time8Label"
            app:layout_constraintStart_toStartOf="@+id/time8Label"/>
</android.support.constraint.ConstraintLayout>