            android:layout_width="0dp"
            android:layout_height="44dp"
            android:id="@+id/domandaLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="22dp" android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:textStyle="bold" android:textSize="23sp"
    />

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textCapSentences|textMultiLine"
            android:gravity="top"
            android:text=""
            android:ems="10"
            android:id="@+id/editorView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/domandaLabel"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"/>

